<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TimeApp.Views.LoadingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeApp.Views">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <ActivityIndicator Color="{StaticResource Primary}"
                               IsRunning="True" HeightRequest="50" WidthRequest="50"
                               IsVisible="True" />
        <Label Text="Cargando..." HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
