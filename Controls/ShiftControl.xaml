<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="TimeApp.Controls.ShiftControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TimeApp.Controls"
    xmlns:drawables="clr-namespace:TimeApp.Controls"
    mc:Ignorable="d">

    <ContentView.Resources>
        <drawables:ElapsedTimeDrawable x:Key="shift" />
    </ContentView.Resources>
    <VerticalStackLayout>
        <GraphicsView x:Name="ProgressView"
                    Drawable="{StaticResource shift}"
					BackgroundColor="{StaticResource Primary}"
					HeightRequest="200"
					WidthRequest="200"/>
    </VerticalStackLayout>
</ContentView>
