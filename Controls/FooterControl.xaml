<?xml version="1.0" encoding="UTF-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:info="clr-namespace:Microsoft.Maui.ApplicationModel;assembly=Microsoft.Maui.Essentials"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="TimeApp.Controls.FooterControl">
    <Label Text="Desytec SpA"
                       TextColor="Chocolate"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
    <Label
        TextColor="Chocolate"
        HorizontalOptions="Center">
        <Label.FormattedText>
            <FormattedString>
                <Span Text="Copyright © " />
                <Span Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{0:yyyy}'}" />
            </FormattedString>
        </Label.FormattedText>
    </Label>
    <Label
        TextColor="Chocolate"
        HorizontalOptions="Center">
        <Label.FormattedText>
            <FormattedString>
                <Span Text="Versión " />
                <Span Text="{x:Static info:AppInfo.VersionString}" />
            </FormattedString>
        </Label.FormattedText>
    </Label>
</StackLayout>
